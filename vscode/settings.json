{
  "debug.allowBreakpointsEverywhere": true,
  "editor.accessibilitySupport": "off",
  "editor.codeLens": true,
  "editor.colorDecorators": true,
  "editor.dragAndDrop": false,
  "editor.folding": false,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 17,
  "editor.glyphMargin": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "selection",
  "editor.padding.top": 15,
  "explorer.compactFolders": true,
  "editor.rulers": [
    80
  ],
  "editor.scrollBeyondLastLine": false,
  "editor.snippetSuggestions": "none",
  "editor.cursorSurroundingLines": 3,
  "editor.useTabStops": true,
  "editor.formatOnPaste": false,
  "editor.tabCompletion": "on",
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 80,
  "editor.hover.enabled": false,
  "explorer.confirmDelete": false,
  "explorer.decorations.badges": false,
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    ".babelrc": "jsonc",
    ".eslintrc": "jsonc",
    "*.pyi": "python"
  },
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/.cache": true,
    "**/.idea": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.venv": true,
    "**/.coverage": true,
    "**/*.py[co]": true
  },
  "git.autofetch": false,
  "python.formatting.provider": "none",
  "python.pythonPath": "${workspaceFolder}/.venv/bin/python3",
  "python.terminal.activateEnvironment": true,
  "python.workspaceSymbols.enabled": false,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "terminal.integrated.env.osx": {
    "SOBOLE_THEME_MODE": "dark"
  },
  "terminal.integrated.enableBell": true,
  "window.clickThroughInactive": false,
  "window.newWindowDimensions": "maximized",
  "window.zoomLevel": 0,

  "workbench.colorTheme": "Ayu Dark",
  "workbench.editor.labelFormat": "short",
  "workbench.iconTheme": "ayu",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.statusBar.visible": false,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tips.enabled": false,
  "python.linting.enabled": false,
  "git.showInlineOpenFileAction": false,
  "git.autorefresh": true,
  "git.decorations.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "never",
  "javascript.suggest.autoImports": false,
  "typescript.suggest.autoImports": false,
  "vetur.completion.autoImport": false,
  "vetur.experimental.templateInterpolationService": true,
  "breadcrumbs.enabled": false,
  "workbench.activityBar.visible": false,

  // Customizing VSCode and Ayu themes:
  "workbench.colorCustomizations": {
    "activityBar.activeBorder": "#e5b358",
    "activityBar.foreground": "#797d7b",
    "gitDecoration.modifiedResourceForeground": "#d4cb68",
    "editorSuggestWidget.highlightForeground": "#e5b358",
    "editorSuggestWidget.selectedBackground": "#1c2a42",
    "tab.inactiveForeground": "#676b6a",
    "sideBar.foreground": "#565958",
    "sideBarTitle.foreground": "#0a0e14",
  },
  "editor.tokenColorCustomizations": {
    "types": "#b3b1ad",
    "semanticHighlighting": false,
    "variables": "#b3b1ad",
    "textMateRules": [
      // Reference:
      // https://github.com/ayu-theme/vscode-ayu/blob/master/ayu-dark.json
      {
        "name": "Language variable",
        "scope": ["variable.language"],
        "settings": {
          "fontStyle": "italic",
          "foreground": "#b3b1ad",
        },
      },
      {
        "name": "Code constants",
        "scope": [
          "variable.identifier_constant",
          "variable.other.member",
          "variable.other.constant",
          "punctuation.definition.variable",
          "entity.name.constant",
          "constant.character",
          "constant.other",
          "string.regexp",
        ],
        "settings": {
          "foreground": "#ffb454",
        },
      },

      // Functions:
      {
        "name": "Function arguments",
        "scope": ["variable.parameter", "meta.parameter"],
        "settings": {
          "foreground": "#b3b1ad",
        },
      },
      {
        "name": "Library function",
        "scope": ["support.function", "support.macro"],
        "settings": {
          "foreground": "#ffb454",
        },
      },

      // Classes:
      {
        "name": "Inheritance",
        "scope": [
          "meta.class.inheritance",
          "variable.parameter.class-inheritance",
          "entity.other.inherited-class",
        ],
        "settings": {
          "foreground": "#b3b1ad",
        },
      }
    ]
  },
}
